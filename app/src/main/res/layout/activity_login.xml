<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/koi2"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_marginEnd="70dp"
        android:background="@drawable/sp_rectangel_root"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:paddingStart="20dp"
            android:drawableStart="@drawable/ic_username_person"
            android:drawablePadding="20dp"
            android:id="@+id/et_username_login"
            android:hint="@string/email_username"
            android:inputType="textEmailAddress"
            android:backgroundTint="#FFF"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"/>

        <View
            android:id="@+id/v_saparator"
            android:background="#E8E9E8"
            android:layout_below="@id/et_username_login"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:id="@+id/et_password_login"
            android:paddingStart="20dp"
            android:drawableStart="@drawable/ic_password_lock"
            android:drawablePadding="20dp"
            android:backgroundTint="#FFF"
            android:layout_below="@id/v_saparator"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_input_login"
        android:layout_below="@id/tv_login"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="275dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/sp_btn_circle"
        android:fontFamily="@font/aldrich"
        android:text="@string/masuk"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rl_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rl_input"
        android:layout_marginTop="110dp"
        android:layout_marginStart="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:text="@string/silahkan_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/aldrich"/>

    <TextView
        android:layout_below="@id/btn_register"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:text="@string/belum_memiliki_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="85dp"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
